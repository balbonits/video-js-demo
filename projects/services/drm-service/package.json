{
  "name": "drm-service",
  "version": "1.0.0",
  "description": "DRM token generation and validation service for content protection",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "migrate:up": "node-pg-migrate up",
    "docker:build": "docker build -t drm-service .",
    "docker:run": "docker run -p 3005:3005 --env-file .env drm-service"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/jwt": "^7.2.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "uuid": "^9.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "axios": "^1.5.0",
    "prom-client": "^14.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node-forge": "^1.3.5",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "node-pg-migrate": "^6.2.2"
  }
}