{
  "name": "chat-service",
  "version": "1.0.0",
  "description": "Real-time WebSocket chat service for video streaming platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "migrate:up": "node-pg-migrate up",
    "docker:build": "docker build -t chat-service .",
    "docker:run": "docker run -p 3004:3004 --env-file .env chat-service"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0",
    "bcrypt": "^5.1.1",
    "rate-limiter-flexible": "^3.0.0",
    "dompurify": "^3.0.6",
    "jsdom": "^22.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "@types/cors": "^2.8.14",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/dompurify": "^3.0.3",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "node-pg-migrate": "^6.2.2"
  }
}