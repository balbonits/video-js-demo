# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://streaming_user:streaming_pass@localhost:5432/streaming_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage Configuration
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=streaming-videos

# CDN Configuration
CDN_BASE_URL=https://cdn.example.com
CDN_SECRET_KEY=your-cdn-secret-key

# Streaming Configuration
HLS_SEGMENT_DURATION=10
HLS_PLAYLIST_SIZE=5
DASH_SEGMENT_DURATION=4
MAX_UPLOAD_SIZE=5368709120
SUPPORTED_FORMATS=mp4,mkv,avi,mov,webm

# Transcoding Configuration
FFMPEG_THREADS=4
TRANSCODING_PROFILES=360p,480p,720p,1080p
ENABLE_4K=false

# Queue Configuration
QUEUE_CONCURRENCY=2
QUEUE_MAX_JOBS=100

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json