{
  "name": "streaming-service",
  "version": "1.0.0",
  "description": "HLS/DASH streaming service with adaptive bitrate support",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "docker:build": "docker build -t streaming-service .",
    "docker:run": "docker run -p 3001:3001 --env-file .env streaming-service"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.0",
    "uuid": "^9.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "node-cache": "^5.1.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "multer": "^1.4.5-lts.1",
    "minio": "^7.1.3",
    "express-rate-limit": "^6.10.0",
    "prom-client": "^14.2.0",
    "bullmq": "^4.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.5",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/multer": "^1.4.7",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "node-pg-migrate": "^6.2.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  }
}