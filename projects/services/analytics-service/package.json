{
  "name": "analytics-service",
  "version": "1.0.0",
  "description": "Real-time analytics service for video streaming platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "docker:build": "docker build -t analytics-service .",
    "docker:run": "docker run -p 3002:3002 --env-file .env analytics-service"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/websocket": "^8.2.0",
    "@fastify/compress": "^6.4.0",
    "@fastify/jwt": "^7.2.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.10.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "clickhouse": "^2.6.0",
    "kafkajs": "^2.2.4",
    "prom-client": "^14.2.0",
    "node-cron": "^3.0.2",
    "uuid": "^9.0.0",
    "dayjs": "^1.11.9",
    "lodash": "^4.17.21",
    "@types/lodash": "^4.14.199"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "@types/jest": "^29.5.4",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "node-pg-migrate": "^6.2.2"
  }
}