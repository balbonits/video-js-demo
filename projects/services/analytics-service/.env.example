# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://analytics_user:analytics_pass@localhost:5432/analytics_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=analytics-service
KAFKA_GROUP_ID=analytics-consumers
KAFKA_TOPICS=video-events,user-events,system-events

# WebSocket Configuration
WS_PORT=3003
WS_PATH=/ws
WS_PING_INTERVAL=30000

# Aggregation Configuration
AGGREGATION_INTERVAL=60000
RETENTION_DAYS=90
BATCH_SIZE=1000

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9091
LOG_LEVEL=info